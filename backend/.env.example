# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aligncv?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs - 14-Day Pass ($0.00)
PRICE_PASS_14D_USD=price_xxxxxxxxxxxxxxxxxx
PRICE_PASS_14D_CAD=price_xxxxxxxxxxxxxxxxxx
PRICE_PASS_14D_MXN=price_xxxxxxxxxxxxxxxxxx
PRICE_PASS_14D_BRL=price_xxxxxxxxxxxxxxxxxx
PRICE_PASS_14D_CLP=price_xxxxxxxxxxxxxxxxxx
PRICE_PASS_14D_ARS=price_xxxxxxxxxxxxxxxxxx

# Stripe Price IDs - Monthly Subscription ($2.99)
PRICE_MONTHLY_USD=price_xxxxxxxxxxxxxxxxxx
PRICE_MONTHLY_CAD=price_xxxxxxxxxxxxxxxxxx
PRICE_MONTHLY_MXN=price_xxxxxxxxxxxxxxxxxx
PRICE_MONTHLY_BRL=price_xxxxxxxxxxxxxxxxxx
PRICE_MONTHLY_CLP=price_xxxxxxxxxxxxxxxxxx
PRICE_MONTHLY_ARS=price_xxxxxxxxxxxxxxxxxx

# AI Services (Optional - at least one required for AI features)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Application URLs
APP_BASE_URL=http://localhost:4200
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# File Upload
MAX_FILE_SIZE=15728640
UPLOAD_DIR=/tmp/uploads

# Rate Limiting (Optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env to version control
# 4. For production, use environment variables or secrets management
# 5. Stripe webhook secret is obtained from Stripe Dashboard > Developers > Webhooks
# 6. JWT secrets should be random, cryptographically secure strings
