// Prisma schema for AlignCV backend
// Supports PostgreSQL for production-grade data integrity

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

// User authentication and profile
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  locale        String    @default("en")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // Relations
  resumes       Resume[]
  coverLetters  CoverLetter[]
  orders        Order[]
  subscription  Subscription?
  refreshTokens RefreshToken[]

  @@index([email])
  @@map("users")
}

// Resume documents
model Resume {
  id          String   @id @default(cuid())
  userId      String
  title       String   @default("Untitled Resume")
  content     Json     // Full resume JSON structure
  templateId  String
  locale      String   @default("en")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isActive])
  @@map("resumes")
}

// Cover letters
model CoverLetter {
  id          String   @id @default(cuid())
  userId      String
  title       String   @default("Untitled Cover Letter")
  content     Json
  locale      String   @default("en")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("cover_letters")
}

// Stripe payment orders (both one-time and subscription initiation)
model Order {
  id                String   @id @default(cuid())
  userId            String
  stripeSessionId   String   @unique
  stripeCustomerId  String?
  mode              String   // "payment" | "subscription"
  status            String   // "pending" | "completed" | "failed" | "refunded"
  amount            Int      // Amount in cents
  currency          String   // USD, CAD, MXN, BRL, CLP, ARS
  plan              String   // "pass14" | "monthly"
  metadata          Json?    // Additional metadata from Stripe
  createdAt         DateTime @default(now())
  completedAt       DateTime?

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSessionId])
  @@index([status])
  @@map("orders")
}

// Active subscriptions
model Subscription {
  id                    String   @id @default(cuid())
  userId                String   @unique
  stripeSubscriptionId  String   @unique
  stripeCustomerId      String
  status                String   // "active" | "canceled" | "past_due" | "unpaid"
  currentPeriodStart    DateTime
  currentPeriodEnd      DateTime
  cancelAtPeriodEnd     Boolean  @default(false)
  canceledAt            DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([stripeSubscriptionId])
  @@index([status])
  @@map("subscriptions")
}

// JWT refresh tokens for secure session management
model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  revokedAt DateTime?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

// Webhook event log (for debugging and replay)
model WebhookEvent {
  id              String   @id @default(cuid())
  stripeEventId   String   @unique
  type            String
  payload         Json
  processed       Boolean  @default(false)
  processedAt     DateTime?
  errorMessage    String?
  createdAt       DateTime @default(now())

  @@index([type])
  @@index([processed])
  @@index([stripeEventId])
  @@map("webhook_events")
}
