{
  "name": "aligncv-backend",
  "version": "1.0.0",
  "description": "AlignCV Backend - Fastify-based API with Stripe, AI, and resume management",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate --schema=./src/shared/database/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/shared/database/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=./src/shared/database/schema.prisma",
    "prisma:studio": "prisma studio --schema=./src/shared/database/schema.prisma",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.3.0",
    "@prisma/client": "^6.19.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^4.28.1",
    "fastify-raw-body": "^4.3.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.8.0",
    "natural": "^7.0.7",
    "pdf-parse": "^1.1.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "stripe": "^16.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/natural": "^5.1.5",
    "@types/node": "^22.5.0",
    "@types/pdf-parse": "^1.1.4",
    "prisma": "^6.19.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "resume",
    "cv",
    "stripe",
    "fastify",
    "ai",
    "typescript"
  ],
  "author": "AlignCV",
  "license": "UNLICENSED"
}
