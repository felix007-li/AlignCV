{
  "$description": "AlignCV design tokens (light/dark)",
  "$themes": [
    { "id": "light", "name": "Light", "selectedTokenSets": { "global": "source", "semantic": "enabled" } },
    { "id": "dark",  "name": "Dark",  "selectedTokenSets": { "global": "source", "semantic": "enabled" } }
  ],
  "global": {
    "color": {
      "brand/primary": { "value": "#2563EB" },
      "brand/primary-100": { "value": "#DBEAFE" },
      "brand/primary-300": { "value": "#93C5FD" },
      "brand/secondary": { "value": "#06B6D4" },
      "bg/page": { "value": "#FFFFFF" },
      "fg/text": { "value": "#111827" },
      "border/subtle": { "value": "#E5E7EB" }
    },
    "radius": { "sm": { "value": "6" }, "md": { "value": "10" }, "xl": { "value": "16" } },
    "space": { "xs": { "value": "4" }, "sm": { "value": "8" }, "md": { "value": "16" }, "lg": { "value": "24" }, "xl": { "value": "32" } },
    "font": { "family/base": { "value": "Inter, Roboto, Arial" }, "size/base": { "value": "16" }, "size/h1": { "value": "36" }, "size/h2": { "value": "24" }, "size/h3": { "value": "18" } }
  },
  "semantic": {
    "button/primary/bg": { "value": "{color.brand/primary}" },
    "button/primary/text": { "value": "{color.bg/page}" },
    "chip/brand/bg": { "value": "{color.brand/primary-100}" },
    "chip/brand/border": { "value": "{color.brand/primary-300}" },
    "card/bg": { "value": "{color.bg/page}" },
    "card/border": { "value": "{color.border/subtle}" }
  }
}